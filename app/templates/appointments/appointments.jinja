{% extends "layout.jinja" %}

{% block title %}
Appointments
{% endblock %}

{% set tab_number = 1 %}

{% block main %}
<link rel="stylesheet" href="static/table.css">
<script src="static/sorttable.js"></script>
<h2>Appointments</h2>
{% if rows %}
<div class="table-container">
    <table class="sortable" id="filter">
        <thead>
            <tr>
                <th scope="col">Time</th>
                <th scope="col" class="sorttable_nosort">Location</th>
                <th scope="col" class="sorttable_nosort">Type</th>
                <th scope="col" class="sorttable_nosort">cancel</th>
            </tr>
        </thead>
        <tbody>
            {% for row in rows %}
            <tr>
                <td>{{ row.time }}</td>
                <td>{{ row.location }}</td>
                <td>{{ row.type }}</td>
                <td><a href="/remove?id={{row.id}}">ðŸ—‘</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% else %}
You have no appointments.
{% endif %}
<br><a href="/appoint"><button class="blue btn" style="margin-top: 1rem;">New Appointment</button></a>
{% if rows %}<br><a href="/clear"><button class="red btn">Delete All Appointments</button></a>{% endif %}
{% endblock %}