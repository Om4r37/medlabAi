{% extends "layout.jinja" %}

{% block title %}
Appointments
{% endblock %}

{% set tab_number = 1 %}

{% block main %}
<link rel="stylesheet" href="static/styles/table.css">
<script src="static/scripts/TableFilter/tablefilter.js"></script>

<h2>Appointments</h2>
{% if rows %}
<div class="table-container">
    <table class="sortable">
        <thead>
            <tr>
                <th scope="col" class="sort">Time</th>
                <th class="sorttable_nosort">Location</th>
                <th class="sorttable_nosort">Type</th>
                <th class="sorttable_nosort">Cancel</th>
            </tr>
        </thead>
        <tbody>
            {% for row in rows %}
            <tr>
                <td>{{ row.time }}</td>
                <td>{{ row.location }}</td>
                <td>{{ row.type }}</td>
                <td><a href="/remove?id={{row.id}}" style="color: black;">ðŸ—‘</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<script data-config>
    // TableFilter settings
    var tfConfig = {
        base_path: "static/scripts/TableFilter/",
        col_0: "none",
        col_1: "select",
        col_2: "select",
        col_3: "none",
        popup_filters: true,
        mark_active_columns: true,
        highlight_keywords: true,
        themes: [{
            name: 'transparent'
        }],
    };

    // Instantiate TableFilter
    var tf = new TableFilter(document.querySelector("table"), tfConfig);
    tf.init();
</script>
<script src="static/scripts/Sortable/sorttable.js"></script>

{% else %}
You have no appointments.
{% endif %}
<br><a href="/appoint"><button class="blue btn" style="margin-top: 1rem;">New Appointment</button></a>
{% if rows %}<br><a href="/clear"><button class="red btn">Delete All Appointments</button></a>{% endif %}
{% endblock %}