{% extends "layout.jinja" %}

{% block title %}
Information
{% endblock %}

{% set tab_number = 0 %}

{% block main %}
<link rel="stylesheet" href="/static/styles/form.css">
<h2>User Information</h1>
    <form action="/" method="post">
        <div>
            <label for="full_name">Full Name</label><br>
            <input {% if current_user.fullname !=None %} value="{{ current_user.fullname }}" {% endif %} type="text"
                id="full_name" name="full_name">
            <br><br>
            <label for="email">Email</label><br>
            <input {% if current_user.email !=None %} value="{{ current_user.email }}" {% endif %} type="email"
                id="email" name="email">
            <br><br>
            <label for="birth_year">Birth Year: </label>
            <input {% if current_user.birth_day !=None %} value="{{ current_user.birth_day }}" {% endif %}
                type="number" id="birth_year" name="birth_year" min="1900" max="{{current_year}}">
            <br><br>
            <label>Gender:</label><br>
            <input type="radio" id="male" name="gender" value="1" {% if current_user.gender == 1 %} checked {% endif %}>
            <label for="male">Male</label><br>
            <input type="radio" id="female" name="gender" value="0" {% if current_user.gender == 0 %} checked {% endif %}>
            <label for="female">Female</label>
            <br><br>
            <label for="height">Height (cm)</label>
            <input {% if current_user.height !=None %} value="{{ current_user.height }}" {% endif %} type="number"
                id="height" name="height" min="0">
            <br><br>
            <label for="weight">Weight (kg)</label>
            <input {% if current_user.weight !=None %} value="{{ current_user.weight  }}" {% endif %} type="number"
                id="weight" name="weight" min="0">
            <br><br>
            <label>Ever got married:</label><br>
            <input type="radio" id="married_yes" name="is_married" value="1" {% if current_user.is_married  %} checked {% endif
                %}>
            <label for="married_yes">Yes</label><br>
            <input type="radio" id="married_no" name="is_married" value="0" {% if current_user.is_married == 0 %} checked {%
                endif %}>
            <label for="married_no">No</label>
            <br><br>
            <label for="work">Work Status:</label><br>
            <select id="work" name="work">
                <option value="0" {% if current_user.work == 0 %} selected {% endif %}>Never Worked</option>
                <option value="1" {% if current_user.work == 1 %} selected {% endif %}>Private</option>
                <option value="2" {% if current_user.work == 2 %} selected {% endif %}>Self-Employed</option>
                <option value="3" {% if current_user.work == 3 %} selected {% endif %}>Government</option>
                <option value="4" {% if current_user.work == 4 %} selected {% endif %}>Children</option>
            </select>
            <br><br>
            <label>Residence:</label><br>
            <input type="radio" id="urban" name="residence" value="1" {% if current_user.residence %} checked {% endif
                %}>
            <label for="urban">Urban</label><br>
            <input type="radio" id="rural" name="residence" value="0" {% if  current_user.residence == 0 %} checked {%
                endif %}>
            <label for="rural">Rural</label>
            <br><br>
            <label for="smoke">Smoking Status:</label><br>
            <select id="smoke" name="smoke">
                <option value="0" {% if current_user.smoke == 0 %} selected {% endif %}>Unknown</option>
                <option value="1" {% if current_user.smoke==1 %} selected {% endif %}>Never</option>
                <option value="2" {% if current_user.smoke==2 %} selected {% endif %}>Former</option>
                <option value="3" {% if current_user.smoke==3 %} selected {% endif %}>Current</option>
            </select>
            <br><br>
            <label for="pregnancies">Number of Children:</label><br>
            <input {% if current_user. num_of_children !=None %} value="{{ current_user. num_of_children }}" {% endif %}
                type="number" id="num_of_children" name="num_of_children" min="0">
            <br><br>
            <input type="checkbox" id="exng" name="exng" value="1" {% if current_user.exng %} checked {% endif %}>
            <label for="exng">Exercise Induced Angina</label>
            <br><br>
            <input type="checkbox" id="heart_disease" name="heart_disease" value="1" {% if current_user.heart_disease  %}
                checked {% endif %}>
            <label for="heart_disease">Heart Disease</label>
            <br><br>
            <input type="submit" value="Save" class="mid blue btn">
        </div>
    </form>
    <a href="#"><button class="red btn">Delete all Information</button></a><br><br>
    <a href="#"><button class="blue btn">Change Password</button></a>
    {% endblock %}