{% extends "layout.jinja" %}

{% block title %}
Results
{% endblock %}

{% set tab_number = 2 %}

{% block main %}
<link rel="stylesheet" href="static/table.css">
<h2>Results</h2>
{% if rows %}
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th scope="col">Time</th>
                <th scope="col">Location</th>
                <th scope="col">Type</th>
                <th scope="col">classification</th>
            </tr>
        </thead>
        <tbody>
            {% for row in rows %}
            <tr>
                <td>{{ row.time }}</td>
                <td>{{ row.location}}</td>
                <td>{{ row.type }}</td>
                <td>{{ row.class }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% else %}
You have no results.
{% endif %}
{% endblock %}