{% extends "layout.jinja" %}

{% block title %}
Dashboard
{% endblock %}

{% set tab_number = 0 %}

{% block main %}
<style>
    canvas {
        max-height: 500px;
    }
</style>
<script src="/static/scripts/chart.min.js"></script>
<h1>Dashboard</h1>
{% for stat in stats %}
{{ stat.name }}: {{ stat.value }}<br>
{% endfor %}
<canvas id="pieChart"></canvas>
<canvas id="donutChart"></canvas>

<script>
    // Pie Chart
    var pieData = {
        labels: ["Label 1", "Label 2", "Label 3"],
        datasets: [{
            data: [30, 50, 20],
            backgroundColor: ["#FF6384", "#36A2EB", "#FFCE56"],
            hoverBackgroundColor: ["#FF6384", "#36A2EB", "#FFCE56"]
        }]
    };

    var pieOptions = {
        responsive: true,
        plugins: {
            title: {
                display: true,
                text: 'Custom Chart Title'
            }
        }
    };

    var pieChart = new Chart(document.getElementById("pieChart"), {
        type: 'pie',
        data: pieData,
        options: pieOptions
    });

    // Donut Chart
    var donutData = {
        labels: ["Label 1", "Label 2", "Label 3"],
        datasets: [{
            data: [40, 30, 30],
            backgroundColor: ["#FF6384", "#36A2EB", "#FFCE56"],
            hoverBackgroundColor: ["#FF6384", "#36A2EB", "#FFCE56"]
        }]
    };

    var donutOptions = {
        responsive: true,
        cutoutPercentage: 50,
        plugins: {
            title: {
                display: true,
                text: 'Custom Chart Title'
            }
        }
    };

    var donutChart = new Chart(document.getElementById("donutChart"), {
        type: 'doughnut',
        data: donutData,
        options: donutOptions
    });
</script>
{% endblock %}