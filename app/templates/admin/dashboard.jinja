{% extends "layout.jinja" %}

{% block title %}
Dashboard
{% endblock %}

{% set tab_number = 0 %}

{% block main %}
<link rel="stylesheet" href="static/styles/dashboard.css">
<script src="/static/scripts/chart.min.js"></script>
<h1>Dashboard</h1>
<div id="container">
    <canvas id="gender"></canvas>
    <canvas id="residence"></canvas>
    <canvas id="exng"></canvas>
    <canvas id="heart_disease"></canvas>
    <canvas id="smoke"></canvas>
    <canvas id="work"></canvas>
</div>
{% for stat in stats %}
{{ loop.index }}- {{ stat.name }}: {{ stat.value }}<br>
{% endfor %}

<script>
    var genderChart = new Chart(document.getElementById("gender"), {
        type: 'doughnut',
        data: {
            labels: ["Male", "Female"],
            datasets: [{
                data: [{{ stats[3].value }}, {{ stats[4].value }}],
                backgroundColor: ["#36A2EB", "#FF6384"],
            }]
        },
        options: {
            responsive: true,
            cutout: "80%",
            plugins: {
                title: {
                    display: true,
                    text: 'Gender Distribution',
                    font: {
                        size: 18
                    }
                }
            }
        }
    });
    var residenceChart = new Chart(document.getElementById("residence"), {
        type: 'doughnut',
        data: {
            labels: ["Rural", "Urban"],
            datasets: [{
                data: [{{ stats[11].value }}, {{ stats[12].value }}],
                backgroundColor: ["#36A2EB", "#FFCE56"],
            }]
        },
        options: {
            responsive: true,
            cutout: "80%",
            plugins: {
                title: {
                    display: true,
                    text: 'Residence',
                    font: {
                        size: 18
                    }
                }
            }
        }
    });
    var exngChart = new Chart(document.getElementById("exng"), {
        type: 'doughnut',
        data: {
            labels: ["No", "Yes"],
            datasets: [{
                data: [{{ stats[2].value - stats[10].value }}, {{ stats[10].value }}],
                backgroundColor: ["#c9cbcf", "#FFCE56"],
            }]
        },
        options: {
            responsive: true,
            cutout: "80%",
            plugins: {
                title: {
                    display: true,
                    text: 'Exercise Induced Angina',
                    font: {
                        size: 18
                    }
                },
                legend: {
                    display: false
                }
            }
        }
    });
    var heartDiseaseChart = new Chart(document.getElementById("heart_disease"), {
        type: 'doughnut',
        data: {
            labels: ["Yes", "No"],
            datasets: [{
                data: [{{ stats[9].value }}, {{ stats[2].value - stats[9].value }}],
                backgroundColor: ["#FF6384", "#c9cbcf"],
            }]
        },
        options: {
            responsive: true,
            cutout: "80%",
            plugins: {
                title: {
                    display: true,
                    text: 'Heart Disease',
                    font: {
                        size: 18
                    }
                },
                legend: {
                    display: false
                }
            }
        }
    });
    var smokeChart = new Chart(document.getElementById("smoke"), {
        type: 'pie',
        data: {
            labels: ["Current Smokers", "Former Smokers", "Never Smoked"],
            datasets: [{
                data: [{{ stats[6].value }}, {{ stats[7].value }}, {{ stats[8].value }}],
                backgroundColor: ["#FF6384", "#36A2EB", "#FFCE56"],
            }]
        },
    options: {
        responsive: true,
            plugins: {
            title: {
                display: true,
                text: 'Smoking Status',
                font: {
                    size: 18
                }
            },
            legend: {
                labels: {
                    font: {
                        size: 14
                    }
                }
            }
        }
    }
    });
    var workChart = new Chart(document.getElementById("work"), {
        type: 'pie',
        data: {
            labels: ["Never Worked", "Private Work", "Self Employed", "Goverment", "Children"],
            datasets: [{
                data: [
                    {{ stats[13].value }},
                    {{ stats[14].value }},
                    {{ stats[15].value }},
                    {{ stats[16].value }},
                    {{ stats[17].value }}
                ],
                backgroundColor: ["#FF6384", "#36A2EB", "#FFCE56", "#4bc0c0", "#c9cbcf"],
            }]
        },
    options: {
        responsive: true,
            plugins: {
            title: {
                display: true,
                text: 'Work Type',
                font: {
                    size: 18
                }
            },
            legend: {
                labels: {
                    font: {
                        size: 14
                    }
                }
            }
        }
    }
    });
</script>
{% endblock %}